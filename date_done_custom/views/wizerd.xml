<odoo>
    <record id="view_stock_picking_validate_wizard_form" model="ir.ui.view">
        <field name="name">stock.picking.validate.wizard.form</field>
        <field name="model">stock.picking.validate.wizard</field>
        <field name="arch" type="xml">
            <form string="Validate Picking">
                <group>
                    <field name="change_date"/>
                    <field name="date_done"   invisible="change_date == False"/>
                </group>
                <footer>
                    <button string="Validate" type="object" name="action_confirm_validate" class="btn-primary"/>
                    <button string="Cancel" class="btn-secondary" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>



    <record id="view_stock_scrap_validate_wizard_form" model="ir.ui.view">
        <field name="name">stock.scrap.validate.wizard.form</field>
        <field name="model">stock.scrap.validate.wizard</field>
        <field name="arch" type="xml">
            <form string="Validate Scrap">
                <group>
                    <field name="change_date"/>
                    <field name="date_done" invisible="change_date == False"/>
                </group>
                <footer>
                    <button string="Validate" type="object" name="action_confirm_scrap" class="btn-primary"/>
                    <button string="Cancel" class="btn-secondary" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>
</odoo>
