<odoo>
    <data>

        <record id="so_form_price_unit_readonly_by_flag" model="ir.ui.view">
            <field name="name">sale.order.form.price_unit.readonly.by.flag</field>
            <field name="model">sale.order</field>
            <field name="inherit_id" ref="sale.view_order_form"/>
            <field name="arch" type="xml">
                <xpath expr="/form/sheet//field[@name='order_line']/tree" position="inside">
                    <field name="allow_price_edit_user" column_invisible="True"/>
                </xpath>

                <!-- عدّل خاصية readonly على السعر -->
                <xpath expr="/form/sheet//field[@name='order_line']/tree//field[@name='price_unit']"
                       position="attributes">
                    <attribute name="readonly">not allow_price_edit_user</attribute>
                </xpath>
            </field>
        </record>

    </data>
</odoo>
