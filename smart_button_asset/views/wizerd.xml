<odoo>
<record id="view_move_form_inherit_assets_button" model="ir.ui.view">
    <field name="name">account.move.form.inherit.assets.button</field>
    <field name="model">account.move</field>
    <field name="inherit_id" ref="account.view_move_form"/>
    <field name="arch" type="xml">
        <xpath expr="//div[@class='oe_button_box']" position="inside">
            <button name="action_open_assets"
                    type="object"
                    class="oe_stat_button"
                    invisible="asset_count == 0"
                    icon="fa-briefcase">
                <field name="asset_count" widget="statinfo"/>
            </button>
        </xpath>
    </field>
</record>
</odoo>
